<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.alicefriend.movie.movie_app.detail.DetailViewModel" />

        <variable
            name="movie"
            type="com.alicefriend.movie.movie_app.domain.Movie" />
    </data>

    <android.support.v4.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/detail_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{movie.title}"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="36sp"
                    app:layout_constraintHorizontal_bias="0.021"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Movie Title" />

                <ImageView
                    android:id="@+id/thumnail"
                    android:layout_width="173dp"
                    android:layout_height="253dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="9dp"
                    app:layout_constraintLeft_toLeftOf="@+id/title"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:srcCompat="@drawable/placeholder" />

                <TextView
                    android:id="@+id/year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="@{movie.releaseDate}"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/thumnail"
                    app:layout_constraintTop_toBottomOf="@+id/label_release_date"
                    tools:text="1945.8.1" />

                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:text="@{movie.voteAverage}"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/thumnail"
                    app:layout_constraintTop_toBottomOf="@+id/label_rating"
                    tools:text="8.8" />

                <Button
                    android:id="@+id/favorite_button"
                    android:layout_width="97dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="12dp"
                    android:text="add"
                    android:textSize="11sp"
                    app:layout_constraintLeft_toRightOf="@+id/thumnail"
                    app:layout_constraintTop_toBottomOf="@+id/rate" />

                <TextView
                    android:id="@+id/overview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"
                    android:padding="8dp"
                    android:text="@{movie.overview}"
                    android:textColor="@color/colorPrimaryText"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_overview"
                    tools:text="@string/placeholder" />

                <TextView
                    android:id="@+id/label_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="0dp"
                    android:text="Release Date"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toRightOf="@+id/thumnail"
                    app:layout_constraintTop_toTopOf="@+id/thumnail" />

                <TextView
                    android:id="@+id/label_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="16dp"
                    android:text="Rating"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="@+id/year"
                    app:layout_constraintTop_toBottomOf="@+id/year" />

                <TextView
                    android:id="@+id/label_overview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Overview"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thumnail" />

            </android.support.constraint.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/trailer_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_box">

                <TextView
                    android:id="@+id/label_trailers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Trailers"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/trailer_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/label_trailers"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"
                    android:nestedScrollingEnabled="false" />

                <RelativeLayout
                    android:id="@+id/trailer_error_cover"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/label_trailers"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"
                    android:visibility="@{viewModel.trailersLoadFailed ? View.VISIBLE : View.INVISIBLE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Error occured, Check netwrok." />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/review_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trailer_box"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/label_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Reviews"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/review_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/label_reviews"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"
                    android:nestedScrollingEnabled="false" />

                <RelativeLayout
                    android:id="@+id/review_error_cover"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/label_reviews"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#FAFAFA"
                    android:visibility="@{viewModel.reviewsLoadFailed ? View.VISIBLE : View.INVISIBLE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Error occured, Check netwrok." />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>